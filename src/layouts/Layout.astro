---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="flex m-5 justify-between">
      <h1 class="text-3xl flex items-center">NoSQL Toolbox 2.0</h1>
      <div class="flex justify-end flex-wrap">
        <a href="/informationen/" class="btn btn-ghost">Informationen</a>
        <a href="/entwickler/" class="btn btn-ghost">Entwickler</a>
      </div>
    </nav>
    <main class="flex justify-center content-center my-10">
      <div
        class="md:w-1/2 w-5/6 border border-slate-400 rounded-xl pt-4 pb-6 px-5"
      >
        <slot />
      </div>
    </main>
    <footer></footer>
  </body>
</html>
