---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <nav class="justify-between p-5 navbar md:pt-7">
      <a class="text-3xl flex items-center btn btn-ghost" href="/"
        >NoSQL Toolbox 2.0</a
      >
      <div class="flex justify-end flex-wrap">
        <a href="/info" class="btn btn-ghost">About</a>
        <a
          href="https://github.com/kjell5317/nosql-toolbox2"
          class="btn btn-ghost"
          >Dev
        </a>
      </div>
    </nav>
    <main class="flex justify-center content-center my-10 md:mt-36">
      <div
        class="md:w-2/3 lg:w-1/2 w-5/6 border border-slate-400 rounded-xl pt-4 pb-6 md:px-5 px-3"
      >
        <slot />
      </div>
    </main>
    <footer></footer>
  </body>
</html>
